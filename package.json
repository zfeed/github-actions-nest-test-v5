    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\"",
        "test": "jest --config ./tests/jest-unit.js",
        "test:integration": "DOTENV_CONFIG_PATH=.env.test jest --config ./tests/jest-integration.js --runInBand",
        "test:integration:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./tests/jest-integration.js --testTimeout=6000000",
        "test:watch": "jest --config ./tests/jest-unit.js --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@mikro-orm/cli": "^5.6.0",
        "@mikro-orm/core": "^5.6.0",
        "@mikro-orm/migrations": "^5.6.0",
        "@mikro-orm/nestjs": "^5.0.2",
        "@mikro-orm/postgresql": "^5.6.0",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/event-emitter": "^1.1.1",
        "@nestjs/microservices": "^8.4.7",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.2.1",
        "@types/validator": "^13.7.10",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "dayjs": "^1.11.3",
        "dotenv": "^16.0.3",
        "kafkajs": "^2.2.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.6",
        "swagger-ui-express": "^4.4.0",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "27.5.0",
        "@types/node": "^16.11.41",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.27.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.2",
        "jest": "^28.0.3",
        "jest-extended": "^3.0.2",
        "lint-staged": "^13.0.3",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.1",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "^4.3.5"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/configs/mikro-orm.config.ts",
            "./dist/configs/mikro-orm.config.js"
        ]
